{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    // Include the server repo to avoid errors such as
    // `File '/path/to/inventaire/types/common.ts' is not under 'rootDir' '/path/to/inventaire/client'. 'rootDir' is expected to contain all source files.`
    // See https://www.typescriptlang.org/tsconfig#rootDir
    // and https://github.com/sveltejs/language-tools/issues/792#issuecomment-770403014
    "rootDir": "..",
    "baseUrl": ".",
    "allowJs": false,
    "checkJs": false,
    "allowImportingTsExtensions": true,
    "incremental": true,
    "preserveSymlinks": true,

    // Override @tsconfig/svelte/tsconfig.json
    "strict": false,
    // Type checking flags, see https://www.typescriptlang.org/tsconfig#Type_Checking_6248
    // "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true,
    "noImplicitOverride": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noPropertyAccessFromIndexSignature": true,
    // "noUncheckedIndexedAccess": true,
    "strictBindCallApply": true,
    // "strictFunctionTypes": true,
    // "strictNullChecks": true,
    // "strictPropertyInitialization": true,
    // "useUnknownInCatchVariables": true,

    // Flags redundant with ESLint, adding noise to type error reports
    // "allowUnreachableCode": false,
    // "allowUnusedLabels": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    "paths": {
      "#activitypub": [
        "./app/modules/activitypub/*"
      ],
      "#client/tests/*": [
        "./tests/*",
      ],
      "#components/*": [
        "./app/modules/general/components/*"
      ],
      "#entities/*": [
        "./app/modules/entities/*"
      ],
      "#general/*": [
        "./app/modules/general/*"
      ],
      "#groups/*": [
        "./app/modules/groups/*"
      ],
      "#inventory/*": [
        "./app/modules/inventory/*"
      ],
      "#listings/*": [
        "./app/modules/listings/*"
      ],
      "#map/*": [
        "./app/modules/map/*"
      ],
      "#network/*": [
        "./app/modules/network/*"
      ],
      "#notifications/*": [
        "./app/modules/notifications/*"
      ],
      "#search/*": [
        "./app/modules/search/*"
      ],
      "#settings/*": [
        "./app/modules/settings/*"
      ],
      "#shelves/*": [
        "./app/modules/shelves/*"
      ],
      "#tasks/*": [
        "./app/modules/tasks/*"
      ],
      "#server/controllers/*": [
        "../server/controllers/*",
      ],
      "#server/lib/*": [
        "../server/lib/*",
      ],
      "#server/types/*": [
        "../server/types/*",
      ],
      "#transactions/*": [
        "./app/modules/transactions/*"
      ],
      "#user/*": [
        "./app/modules/user/*"
      ],
      "#users/*": [
        "./app/modules/users/*"
      ],
      "#welcome/*": [
        "./app/modules/welcome/*"
      ],
      "#assets/*": [
        "./app/assets/*"
      ],
      "#modules/*": [
        "./app/modules/*"
      ],
      "#app/*": [
        "./app/*"
      ],
      "#vendor/*": [
        "./vendor/*"
      ],
    },
  },
}
