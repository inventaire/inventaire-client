<div class="controls">
  <div class="header">
    <h2><a href="{{serie.pathname}}" class="showEntity">{{serie.label}}</a></h2>

    <a href="{{serie.edit}}" class="showEntityEdit pencil" title="{{i18n 'edit data'}}">
      {{icon 'pencil'}}
    </a>

    {{#if serie.wikipedia}}
      <a class="wikipedia" href="{{serie.wikipedia.url}}"></a>
      {{iconLink 'wikipedia-w' serie.wikipedia.url title='Wikipedia'}}
    {{/if}}
  </div>

  <div class="control">
    <label for="partsNumber">{{i18n 'number of parts'}}</label>
    <select id="partsNumber">
      {{#each partsNumberPickerRange}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div class="control">
    {{partial 'toggler' authorsToggler}}
  </div>

  <div class="control">
    {{partial 'toggler' editionsToggler}}
  </div>

  <div class="control">
    {{partial 'toggler' sizeToggler}}
  </div>

  <div class="control">
    <label for="titlePattern">{{i18n 'title pattern'}}</label>
    <input id="titlePattern" name="pattern" value="{{titlePattern}}">
  </div>

  <a id="createPlaceholders" class="tiny-button light-blue {{#unless placeholderCounter}}hidden{{/unless}}">
    {{I18n 'create all the missing entities'}}
    <span class="counter">({{placeholderCounter}})</span>
    <span class="loading"></span>
  </a>

</div>

<div id="conflicts"></div>
<div id="isolatedEditionsWrapper" class="hidden">
  <h3 class="section-label">isolated editions</h3>
  <div id="isolatedEditions"></div>
</div>
<div id="withoutOrdinal"></div>
<div id="withOrdinal"></div>

<div class="parts-suggestions-wrapper">
  <h3 class="section-label">{{i18n 'parts suggestions'}}</h3>
  <div id="partsSuggestions"></div>
</div>
