<p class="edition-subtitle">{{stringClaim claims 'wdt:P1680' true}}</p> {{!-- subtitle --}}
<div class="inner-claims">
  <p>
    {{#unless onWorkLayout}}
      {{entityClaim claims 'wdt:P629' true}}  {{!-- edition of --}}
      {{entityClaim claims 'wdt:P50' true}}  {{!-- author --}}
      {{entityClaim claims 'wdt:P58' true}} {{!-- scenarist --}}
      {{entityClaim claims 'wdt:P110' true}} {{!-- illustrator --}}
      {{entityClaim claims 'wdt:P6338' true}} {{!-- colorist --}}
      {{entityClaim claims 'wdt:P179' true}} {{!-- serie --}}
    {{/unless}}
    {{entityClaim claims 'wdt:P2679' true}}  {{!-- author of foreword --}}
    {{entityClaim claims 'wdt:P2680' true}}  {{!-- author of afterword --}}
    {{entityClaim claims 'wdt:P655'}} {{!-- translator --}}
    {{entityClaim claims 'wdt:P407'}} {{!-- edition language --}}
    {{entityClaim claims 'wdt:P123' true}} {{!-- publisher --}}
    {{entityClaim claims 'wdt:P195' true}} {{!-- collection --}}
    {{timeClaim claims 'wdt:P577'}} {{!-- publication date --}}
    {{quantityClaim claims 'wdt:P1104'}} {{!-- number of pages --}}
    {{quantityClaim claims 'wdt:P2635'}} {{!-- number of volumes --}}
  </p>
  {{!-- not so important for most users --}}
  <div>
    {{#if claims.wdt:P212}}
      {{{prop 'wdt:P212'}}}{{claims.wdt:P212}} {{!-- ISBN-13 --}}
    {{else}}
      {{#if _id}}
        <span class="property-value">{{i18n 'inventaire id'}}:</span> {{_id}}
      {{/if}}
    {{/if}}
  </div>
  {{#if claims.wdt:P957}}
    <div>{{{prop 'wdt:P957'}}}{{claims.wdt:P957}}</div> {{!-- ISBN-10 --}}
  {{/if}}
</div>
