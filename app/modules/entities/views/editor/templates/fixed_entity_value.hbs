{{#if draft}}
  {{label}}
{{else}}
  {{#if valueEntity}}
    {{link url=valueEntity.edit classes='showEntityEdit' simpleOpenedAnchor=true title='edit_entity' titleAttrKey='entity' titleAttrValue=valueEntity.label}}
      <div class="value-entity-wrapper">
        {{#with valueEntity}}
          <div class="img-wrapper">
            {{#if image.url}}
              <img src='{{imgSrc image.url 48}}' alt='{{label}}'>
            {{/if}}
          </div>
          <div class="value-entity-details">
            <span class="label">{{label}}</span>
            <span class="description">{{description}}</span>
          </div>
        {{/with}}
      </div>
    </a>
    {{!-- Should be outside the above anchor to avoid having nested anchors --}}
    {{partial 'entities:editor:identifier_with_tooltip' valueEntity}}
  {{else}}
    {{partial 'loader' align='start'}}
  {{/if}}
{{/if}}
