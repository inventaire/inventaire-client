<a href="{{pathname}}" class="showTransaction {{#unless mainUserRead}}unread{{/unless}}">
  {{!-- snapshot data are always more meaningful than the item data
  as they reflect the state of the item - especially the transaction -
  when the transaction started --}}
  <div class="transactionBox {{transaction}}">
    {{icon icon}}
  </div>
  {{#if onItem}}
    <div class="profile-pic">
      {{#if requester.picture}}
        <img src="{{imgSrc requester.picture 48}}" alt="{{requester.username}}" loading="lazy">
      {{/if}}
    </div>
    <div class="text">
      <span class="context">{{{requestContext}}}</span>
    </div>
  {{else}}
    <div class="profile-pic">
      {{#if other.picture}}
        <img src="{{imgSrc other.picture 48}}" alt="{{other.username}}" loading="lazy">
      {{/if}}
    </div>
    <div class="text">
      <span class="title">{{entity.title}}</span>
      <span class="context">{{other.username}}</span>
    </div>
    <div class="item-pic">
      {{#if entity.image}}
        <img src="{{imgSrc entity.image 48}}" alt="{{entity.title}}" loading="lazy">
      {{/if}}
    </div>
  {{/if}}
  <div class="flags">
    {{> 'notifications:unread_flag'}}
  </div>
</a>