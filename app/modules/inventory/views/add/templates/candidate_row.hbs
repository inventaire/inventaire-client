<div class="checkbox-cell">
  {{#if isInvalid}}
    <input type="checkbox" title="{{i18n 'invalid ISBN'}}" disabled>
  {{else}}
    <input type="checkbox"
      {{#if selected}}checked{{/if}}
      {{#if needInfo}}title="{{i18n 'need more information'}}" disabled{{/if}}
    >
  {{/if}}
</div>
<div class="data">
  <div>
    {{~#if title~}}
      <span class="label">{{i18n 'title'}}:</span>
      <span class="value">
        <a class="link" href="/entity/{{uri}}" target="_blank">{{title}}</a>
      </span>
    {{~/if~}}
  </div>
  <div>
    {{~#if authors~}}
      <span class="label">{{i18n 'authors'}}:</span>
      <span class="value">
        {{#each authors}}
          <a class="link" href="/entity/{{uri}}" target="_blank">{{name}}</a>
        {{/each}}
      </span>
    {{~/if~}}
  </div>
  <div class="isbn-data">
    <span class="label">ISBN:</span>
    <span class="value">
      <a class="link" href="/entity/{{uri}}" target="_blank">{{rawIsbn}}</a>
    </span>
  </div>
  <div class="status">
    {{~#if isInvalid~}}
      <span class="invalid-isbn">{{i18n 'invalid ISBN'}}</span>
    {{~/if~}}
    {{~#if needInfo~}}
      <a class="addInfo tiny-warning-button">{{i18n 'need more information'}}</a>
    {{~/if~}}
    {{~#if existingEntityItemsCount~}}
      <span class="existing-entity-items">
        {{{I18n 'existing_entity_items' smart_count=existingEntityItemsCount pathname=existingEntityItemsPathname}}}
      </span>
    {{~/if~}}
    {{~#if errorMessage~}}
      <span class="error-message">{{errorMessage}}</span>
    {{~/if~}}
  </div>
</div>
<div class="action">
  <a class="remove tiny-button light-grey" title="{{i18n 'remove'}}">{{icon 'trash'}}</a>
</div>
