{{#if admin}}
  <span class="admin">{{I18n 'admin'}}</span>
{{/if}}
{{!-- Do not show the friends menu when not stretch as the dropdown requires place --}}
{{#if member}}
  <span class="memberMenu">
    {{!-- TODO: move dropdown out and replace by a button element --}}
    <div class="member has-dropdown" role="button" aria-expanded="false" aria-controls="membership-actions-{{_id}}">
      {{!-- <span class="label">{{I18n 'member'}}</span> --}}
      {{icon 'chevron-down'}}
      <ul id="membership-actions-{{_id}}" class="dropdown dropdown-align-right">
        <li>
          <button class="select-2">
            {{icon 'user'}} {{I18n 'see profile'}}</span>
          </button>
        </li>
        {{#if mainUserIsAdmin}}
          {{#unless admin}}
            <li>
              <button class="makeAdmin">
                {{icon 'key'}} {{I18n 'make admin'}}</span>
              </button>
            </li>
            <li>
              <button class="kick">
                {{icon 'ban'}} {{I18n 'remove from group'}}</span>
              </button>
            </li>
          {{/unless}}
        {{/if}}
      </ul>
    </div>
  </span>
{{/if}}
{{#if invited}}
  <span class="invited">{{I18n 'invited'}}</span>
{{/if}}
{{#if requested}}
  {{#if mainUserIsAdmin}}
    <div class="request-actions">
      <a class="acceptRequest action" title="{{I18n "validate user's request to join the group"}}">{{icon 'plus'}}<span class="label">{{I18n 'accept'}}</span>
      </a>
      <a class="refuseRequest action" title="{{I18n "discard user's request to join the group"}}">{{icon 'ban'}}<span class="label">{{I18n 'refuse'}}</span>
      </a>
    </div>
  {{else}}
    <span class="status">{{I18n 'waiting for admin validation'}}</span>
  {{/if}}
{{/if}}
{{#if none}}
  <a class="invite action" title="invite user to join the group"> {{icon 'plus'}} {{I18n 'invite'}} </a>
  <span class="check"></span>
{{/if}}