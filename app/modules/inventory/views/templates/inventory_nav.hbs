<div id="tabs" class="tab-selected-{{section}}">
  <a id="userTab" href="{{user.pathname}}">
    <img class="avatar" src="{{imgSrc user.picture 40}}">
    <span class="label">{{user.username}}</span>
  </a>
  <a id="networkTab" href="/inventory/network">
    {{icon 'users'}}
    <span class="label">{{I18nStartCase 'friends & groups'}}</span>
  </a>
  <a id="publicTab" href="/inventory/public">
    {{icon 'map-marker'}}
    <span class="label">{{I18n 'public'}}</span>
  </a>
</div>
