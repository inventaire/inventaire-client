#!/usr/bin/env bash

set -e

ESLINT_ARGS="--format codeframe --ext js,svelte --config .eslintrc.cjs"
if [ "$ESLINT_PRE_COMMIT_EXTRA" != "" ] ; then
  ESLINT_ARGS="$ESLINT_ARGS --config .eslintrc.pre-commit-extra.cjs"
fi

if [ "$1" != "" ] ; then
  eslint $ESLINT_ARGS "$@"
  stylelint --config .stylelintrc.cjs --quiet-deprecation-warnings --allow-empty-input "$@"
else
  eslint $ESLINT_ARGS app tests scripts
  stylelint --config .stylelintrc.cjs --quiet-deprecation-warnings app
fi
